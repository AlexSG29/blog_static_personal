---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<h2>ðŸ‘‹ Hey there, fellow coder!</h2>
			<p>
        Every mistake is a lesson, and every line of code tells a story. 
        Welcome to my journey in the world of web development
      </p>
      <a class="start" href="/blog">
        Start the Journey
      </a>
		</main>
		<Footer />
	</body>
</html>

<style>
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 2em;
  }

  @media (min-width: 640px) {
    main {
      text-align: left;
      align-items: flex-start;
      padding: 0;
    }
  }

  .start {
    background-color: #6D28D9; 
    color: white;
    font-weight: 600; 
    padding: 0.5em 1em;
    border: none;
    border-radius: 0.375em; 
    cursor: pointer;
    transition: background-color 0.3s ease;
    text-decoration: none;
  }

  .start:hover {
    background-color: #4C1D95; 
  }
</style>